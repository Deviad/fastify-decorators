{
  "name": "fastify-decorators",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node bin/start.js",
    "build": "yarn clean && yarn build:lib && yarn build:server",
    "build:server": "tsc",
    "clean": "yarn clean:server && yarn clean:lib",
    "clean:server": "rimraf dist/server",
    "clean:lib": "rimraf dist/fastify-decorators node_modules/fastify-decorators",
    "build:lib": "tsc -p ./lib/tsconfig.json && yarn cp",
    "cp": "yarn cp:assets && yarn cp:package",
    "cp:assets": "cp -r ./lib/package.json ./lib/README.md ./LICENSE ./lib/docs ./dist/fastify-decorators && node patch-readme.js",
    "cp:package": "cp -r ./dist/fastify-decorators ./node_modules",
    "test": "yarn cp:package && tap"
  },
  "directories": {
    "bin": "./bin",
    "doc": "./lib/docs",
    "example": "./src",
    "lib": "./lib",
    "test": "./test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L2jLiga/fastify-decorators.git"
  },
  "author": "Andrey Chalkin <L2jLiga@gmail.com> (https://github.com/L2jLiga)",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^12.12.25",
    "@types/ws": "^7.2.0",
    "codecov": "^3.6.1",
    "fastify": "^2.11.0",
    "fastify-websocket": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "tap": "^14.10.6",
    "typescript": "^3.7.5"
  },
  "engines": {
    "node": ">= 10.0.0",
    "yarn": "^1.0.0"
  }
}
